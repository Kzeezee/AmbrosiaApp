<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemonmilkbold"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="#010101"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_profile" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemonmilkbold"
                android:textSize="20dp"
                android:text="First Name" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemonmilkbold"
                android:textSize="20dp"
                android:text="Last Name" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profilefname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemonmilkregular"
                android:textSize="18dp"
                android:text="John" />

            <TextView
                android:id="@+id/profilelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemonmilkregular"
                android:textSize="18dp"
                android:text="Bala" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemonmilkbold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/profileemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemonmilkregular"
        android:layout_marginHorizontal="15dp"
        android:textSize="18dp"
        android:text="hello@gmail.com" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemonmilkbold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        android:text="Lifestyle" />

    <RadioGroup
        android:id="@+id/lifestyleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioathletic"
            style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lemonmilkregular"
            android:text="Athletic" />

        <RadioButton
            android:id="@+id/radioactive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lemonmilkregular"
            android:text="Active" />

        <RadioButton
            android:id="@+id/radionormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lemonmilkregular"
            android:text="Normal" />

    </RadioGroup>


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/lemonmilkregular"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Lifestyle determines your recommended calories intake" />

    <Button
        android:id="@+id/profileUpdateB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:fontFamily="@font/lemonmilkregular"
        android:layout_marginVertical="25dp"
        android:textSize="18dp"
        android:padding="15dp"
        android:text="Update" />


</LinearLayout>